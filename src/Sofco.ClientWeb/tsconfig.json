{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types",
      "node_modules/moment"
    ],
    "lib": [
      "es2016",
      "dom"
    ],
    "paths": {
      "exceljs": ["node_modules/exceljs/dist/exceljs.min"],
      "@angular/*": [
        "../node_modules/@angular/*"
      ]
    },
    "module": "es2015",
    "angularCompilerOptions": {
      "enableIvy": true
    } 
  }
}